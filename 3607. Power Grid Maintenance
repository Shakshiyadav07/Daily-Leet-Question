#include <bits/stdc++.h>
using namespace std;

struct DSU {
    vector<int> parent, rank;
    DSU(int n) {
        parent.resize(n + 1);
        rank.assign(n + 1, 0);
        iota(parent.begin(), parent.end(), 0);
    }
    int find(int x) {
        if (parent[x] != x)
            parent[x] = find(parent[x]);
        return parent[x];
    }
    void unite(int x, int y) {
        x = find(x);
        y = find(y);
        if (x == y) return;
        if (rank[x] < rank[y]) swap(x, y);
        parent[y] = x;
        if (rank[x] == rank[y]) rank[x]++;
    }
};

class Solution {
public:
    vector<int> processQueries(int c, vector<vector<int>>& connections, vector<vector<int>>& queries) {
        DSU dsu(c);

        // 1️⃣ Build connected components (power grids)
        for (auto &e : connections)
            dsu.unite(e[0], e[1]);

        // 2️⃣ Group stations by component root
        unordered_map<int, vector<int>> comp;
        for (int i = 1; i <= c; i++)
            comp[dsu.find(i)].push_back(i);

        // 3️⃣ For each grid, store online stations in a sorted set
        unordered_map<int, set<int>> online;
        for (auto &[root, nodes] : comp)
            online[root] = set<int>(nodes.begin(), nodes.end());

        vector<bool> offline(c + 1, false);
        vector<int> res;

        // 4️⃣ Process each query
        for (auto &q : queries) {
            int type = q[0], x = q[1];
            int root = dsu.find(x);

            if (type == 1) { // maintenance check
                if (!offline[x]) {
                    res.push_back(x);
                } else {
                    auto &st = online[root];
                    if (st.empty()) res.push_back(-1);
                    else res.push_back(*st.begin()); // smallest online station
                }
            } 
            else if (type == 2) { // go offline
                if (!offline[x]) {
                    offline[x] = true;
                    online[root].erase(x);
                }
            }
        }
        return res;
    }
};
